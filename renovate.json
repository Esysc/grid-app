{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":preserveSemverRanges"
  ],
  "timezone": "Europe/Rome",
  "schedule": [
    "before 6am on monday"
  ],
  "labels": [
    "dependencies"
  ],
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "separateMajorMinor": true,
  "separateMinorPatch": false,
  "packageRules": [
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Group Python dependencies",
      "matchManagers": [
        "pip_requirements"
      ],
      "groupName": "Python dependencies",
      "schedule": [
        "before 6am on monday"
      ]
    },
    {
      "description": "Group Python dev dependencies",
      "matchManagers": [
        "pip_requirements"
      ],
      "matchFileNames": [
        "backend/requirements-dev.txt"
      ],
      "groupName": "Python dev dependencies",
      "schedule": [
        "before 6am on monday"
      ]
    },
    {
      "description": "Limit Python Docker image to 3.13.x",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "python"
      ],
      "allowedVersions": "< 3.14"
    },
    {
      "description": "Limit Python in GitHub Actions to 3.13.x",
      "matchManagers": [
        "github-actions"
      ],
      "matchPackageNames": [
        "actions/setup-python"
      ],
      "matchFileNames": [
        ".github/workflows/**"
      ],
      "allowedVersions": "< 3.14"
    },
    {
      "description": "Group frontend dependencies",
      "matchManagers": [
        "npm"
      ],
      "matchFileNames": [
        "frontend/package.json"
      ],
      "groupName": "Frontend dependencies",
      "schedule": [
        "before 6am on monday"
      ]
    },
    {
      "description": "Docker images - pin digests",
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": true,
      "groupName": "Docker images"
    },
    {
      "description": "Require dashboard approval for major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "dependencyDashboardApproval": true,
      "labels": [
        "dependencies",
        "major-update"
      ]
    },
    {
      "description": "Critical security updates - high priority",
      "matchDatasources": [
        "npm",
        "pypi"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "matchPackagePatterns": [
        "*"
      ],
      "vulnerabilityAlerts": {
        "labels": [
          "security"
        ],
        "automerge": true
      }
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security",
      "dependencies"
    ],
    "assignees": [
      "@Esysc"
    ]
  },
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ”„ Dependency Updates Dashboard",
  "ignoreDeps": [],
  "ignorePaths": [
    "**/node_modules/**",
    "**/__pycache__/**",
    "**/dist/**",
    "**/build/**"
  ]
}
